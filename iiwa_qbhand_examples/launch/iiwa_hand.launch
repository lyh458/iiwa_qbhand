<?xml version="1.0"?>
<launch>
  <arg name="qbhand_name" default="qbhand"/>
  
  <param name="/iiwa/publishJointStates" type="boolean" value="true" /> <!--publish joint states (avoid joint_state_controller)-->
  <param name="/iiwa/qbhandName" type="string" value="$(arg qbhand_name)" /> <!--Sunrise qbhand-->
  
    <include ns="iiwa" file="$(find iiwa_qbhand_moveit)/launch/planning_context.launch">
        <arg name="load_robot_description" value="true"/>
    </include>
    
    <node ns="iiwa" name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
          respawn="false" output="screen" />
    
    <node ns="iiwa" name="$(anon rviz)" pkg="rviz" type="rviz" respawn="true" 
	  args="-d $(find iiwa_qbhand_examples)/launch/iiwa_qbhand.rviz" output="screen" />
    
</launch>